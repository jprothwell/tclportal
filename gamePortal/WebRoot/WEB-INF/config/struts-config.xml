<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
	       <form-bean name="countryForm" type="com.tcl.gamePortal.form.CountryForm"></form-bean>
	       <form-bean name="provinceForm" type="com.tcl.gamePortal.form.ProvinceForm"></form-bean>
	       <form-bean name="cityForm" type="com.tcl.gamePortal.form.CityForm"></form-bean>
	       <form-bean name="telecomoperatorsForm" type="com.tcl.gamePortal.form.TelecomoperatorsForm"></form-bean>
	       <form-bean name="languageForm" type="com.tcl.gamePortal.form.LanguageForm"></form-bean>
	       <form-bean name="spinfoForm" type="com.tcl.gamePortal.form.SpinfoForm"></form-bean>
	       <form-bean name="ipinfoForm" type="com.tcl.gamePortal.form.IpinfoForm"></form-bean>
	       <form-bean name="javaparameterForm" type="com.tcl.gamePortal.form.JavaparameterForm"></form-bean>
	       <form-bean name="mobileinfoForm" type="com.tcl.gamePortal.form.MobileinfoForm"></form-bean>
	       <form-bean name="gameinfoForm" type="com.tcl.gamePortal.form.GameinfoForm"></form-bean>
	       <form-bean name="gameresouceForm" type="com.tcl.gamePortal.form.GameresouceForm"></form-bean>
	       <form-bean name="pageinfoForm" type="com.tcl.gamePortal.form.PageinfoForm"></form-bean>
	       <form-bean name="locationpageForm" type="com.tcl.gamePortal.form.LocationpageForm"></form-bean>
	       <form-bean name="visiteinfoForm" type="com.tcl.gamePortal.form.VisiteinfoForm"></form-bean>
	       <form-bean name="downloadinfoForm" type="com.tcl.gamePortal.form.DownloadinfoForm"></form-bean>
	       <form-bean name="changelogForm" type="com.tcl.gamePortal.form.ChangelogForm"></form-bean>
	       <form-bean name="logsForm" type="com.tcl.gamePortal.form.LogsForm"></form-bean>
	       <form-bean name="customerForm" type="com.tcl.gamePortal.form.CustomerForm"></form-bean>
	        <form-bean name="commentForm" type="com.tcl.gamePortal.form.CommentForm"></form-bean>
	</form-beans>

	<global-forwards>
	<!-- 
		<forward name="welcome" path="/welcome.do" />
		<forward name="fail" path="/jsp/login/index.jsp" />
		<forward name="main" path="/jsp/main.jsp" />
		<forward name="fail1" path="/jsp/common/fail.jsp"></forward>
		<forward name="suc" redirect="true" path="/jsp/common/succee.jsp"></forward>
		 -->
	</global-forwards>


	<action-mappings>
	<!-- 首页 -->
	<action path="/visit" name="gameinfoForm" scope="request" parameter="action"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="indexWap1" path="/page/wml1/index.jsp" />
			<forward name="indexWap2" path="/page/wml2/index.jsp" />
			<forward name="indexWap3" path="/page/wml3/index.jsp" />
			<forward name="indexMeno" path="/page/wml1/menu.jsp" />
			<forward name="listWap1" path="/page/wml1/list.jsp" />
			<forward name="listWap2" path="/page/wml2/list.jsp" />
			<forward name="listWap3" path="/page/wml3/list.jsp" />
	</action>
	</action-mappings>
	<controller>
		<set-property property="processorClass"
			value="org.springframework.web.struts.DelegatingRequestProcessor" />
	</controller>

</struts-config>

