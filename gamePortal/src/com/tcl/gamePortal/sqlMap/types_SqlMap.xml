<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="types" >
  <resultMap id="typesResult" class="com.tcl.gamePortal.domain.Types" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="fid" property="fid" jdbcType="INTEGER" />
    <result column="typeValue" property="typevalue" jdbcType="VARCHAR" />
    <result column="allowance" property="allowance" jdbcType="VARCHAR" />
  </resultMap>
 
  <select id="findTypesCount" parameterClass="java.util.Map" resultClass="java.lang.Integer" >
    		select count(*) from types
  </select>
 
   <select id="findTypesList" parameterClass="java.util.Map" resultMap="typesResult">
	  select * from types order by id desc limit #start#,#end#
  </select>
  
    <select id="findAllTypes" parameterClass="java.util.Map" resultMap="typesResult">
	  select * from types
  </select>
  
  <insert id="saveTypes" parameterClass="com.tcl.gamePortal.domain.Types" >
    insert into types (id, fid, typeValue, allowance)
    values (#id:INTEGER#, #fid:INTEGER#, #typevalue:VARCHAR#, #allowance:VARCHAR#)
  </insert>
  
  <update id="updateTypes" parameterClass="com.tcl.gamePortal.domain.Types" >
    update types
    set fid = #fid:INTEGER#,
      typeValue = #typevalue:VARCHAR#,
      allowance = #allowance:VARCHAR#
    where id = #id:INTEGER#
  </update>


</sqlMap>