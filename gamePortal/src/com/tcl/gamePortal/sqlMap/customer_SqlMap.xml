<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="customer" >
  <resultMap id="customerResult" class="com.tcl.gamePortal.domain.Customer" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="userName" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="email" property="email" jdbcType="OTHER" />
    <result column="mobile" property="mobile" jdbcType="VARCHAR" />
    <result column="ctime" property="ctime" jdbcType="TIMESTAMP" />
     <result column="point" jdbcType="INTEGER" property="point" />
  </resultMap>
  <select id="queryCustomer" parameterClass="java.lang.Integer" resultMap="customerResult">
    select * from customer where id = #id:INTEGER#
  </select>
  
   <select id="queryCustomer" parameterClass="java.lang.String" resultMap="customerResult">
    select * from customer where userName = #userName:VARCHAR#
  </select>
  
   <insert id="saveCustomer" parameterClass="com.tcl.gamePortal.domain.Customer">
    insert into customer (id, userName, password, email, mobile, ctime, point)
    values (#id:INTEGER#, #username:VARCHAR#, #password:VARCHAR#, #email:OTHER#, #mobile:VARCHAR#,
      #ctime:TIMESTAMP#, #point:INTEGER#)
  </insert>
  <update id="updateCustomer" parameterClass="com.tcl.gamePortal.domain.Customer">
    update customer set userName = #username:VARCHAR#,
      password = #password:VARCHAR#,
      email = #email:OTHER#,
      mobile = #mobile:VARCHAR#,
      ctime = #ctime:TIMESTAMP#,
      point = #point:INTEGER#
    where id = #id:INTEGER#
  </update>
</sqlMap>