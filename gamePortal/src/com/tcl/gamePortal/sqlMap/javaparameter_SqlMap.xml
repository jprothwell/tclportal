<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="javaparameter" >
  <resultMap id="javaparameterResult" class="com.tcl.portal.domain.Javaparameter" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="value" property="value" jdbcType="VARCHAR" />
    <result column="remarker" property="remarker" jdbcType="VARCHAR" />
  </resultMap>
 
   <select id="findJavaparaCount" parameterClass="java.util.Map" resultClass="java.lang.Integer" >
    select count(*) from javaparameter
  </select>
 
   <select id="findJavaparaList" parameterClass="java.util.Map" resultMap="javaparameterResult">
	  select * from javaparameter where 1=1
	   order by id desc limit #start#,#end#
  </select>
  
  <select id="queryJavapara" resultMap="javaparameterResult" parameterClass="java.lang.Integer" >
    select id, name, value, remarker
    from javaparameter
    where id = #id:INTEGER#
  </select>
  
  <delete id="deleteJavapara" parameterClass="com.tcl.portal.domain.Javaparameter" >
    delete from javaparameter
    where id = #id:INTEGER#
  </delete>

  <insert id="saveJavapara" parameterClass="com.tcl.portal.domain.Javaparameter" >
    insert into javaparameter (id, name, value, remarker)
    values (#id:INTEGER#, #name:VARCHAR#, #value:VARCHAR#, #remarker:VARCHAR#)
  </insert>
  
  <update id="updateJavapara" parameterClass="com.tcl.portal.domain.Javaparameter" >
    update javaparameter
    set name = #name:VARCHAR#,
      value = #value:VARCHAR#,
      remarker = #remarker:VARCHAR#
    where id = #id:INTEGER#
  </update>
 

</sqlMap>