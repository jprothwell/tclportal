<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:orientation="horizontal"
		android:gravity="center_horizontal">
		<ImageView 
			android:id="@+id/play_image"
			android:background="@drawable/albumart_mp"
			android:layout_width="180dip"
			android:layout_height="180dip"
			android:layout_marginLeft="8dip"
			android:layout_marginRight="6dip"
			android:layout_marginTop="8dip">
		</ImageView>
		<LinearLayout
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center_horizontal">
			<ImageButton
				android:id="@+id/play_list"
				android:src="@drawable/playlist"
				android:layout_width="78dip"
				android:layout_height="42dip"
				android:layout_marginTop="16dip">
			</ImageButton>
			
			<ImageButton
				android:id="@+id/pay_shuffle"
				android:src="@drawable/shuffle_off_btn"
				android:layout_width="78dip"
				android:layout_height="42dip"
				android:layout_marginTop="16dip">
			</ImageButton>
			
			<ImageButton
				android:id="@+id/pay_repeat"
				android:src="@drawable/repeat_off_btn"
				android:layout_width="78dip"
				android:layout_height="42dip"
				android:layout_marginTop="16dip">
			</ImageButton>
		</LinearLayout>
	</LinearLayout> 
	<LinearLayout
			android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:baselineAligned="false"
        	android:paddingLeft="11dip"
        	android:paddingTop="3dip"
        	android:paddingBottom="3dip">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dip"
				android:src="@drawable/artist_playback">
			</ImageView>
			<TextView
				android:id="@+id/play_text_artist"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
            	android:ellipsize="end"
            	android:layout_gravity="center_vertical">
			</TextView>
	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:baselineAligned="false"
        	android:paddingLeft="11dip"
        	android:paddingTop="3dip"
        	android:paddingBottom="6dip">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dip"
				android:src="@drawable/album_playback">
			</ImageView>
			<TextView
				android:id="@+id/play_text_album"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
            	android:ellipsize="end"
            	android:layout_gravity="center_vertical">
			</TextView>
	</LinearLayout>
	<LinearLayout
			android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:baselineAligned="false"
        	android:paddingLeft="11dip"
        	android:paddingTop="3dip"
        	android:paddingBottom="6dip">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dip"
				android:src="@drawable/song_playback">
			</ImageView>
			<TextView
				android:id="@+id/play_text_song"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
            	android:ellipsize="end"
            	android:layout_gravity="center_vertical">
			</TextView>
	</LinearLayout>
	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.25"
        android:background="#aabbcc"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:gravity="center">
        
        	<ImageButton
        		android:id="@+id/play_before"
				android:src="@drawable/shuffle_off_btn"
				android:layout_width="55dip"
				android:layout_height="45dip">
        	</ImageButton>
        	<ImageButton
        		android:id="@+id/play_pause"
				android:src="@drawable/play_small"
				android:layout_width="55dip"
				android:layout_height="45dip">
        	</ImageButton>
        	<ImageButton
        		android:id="@+id/play_next"
				android:src="@drawable/shuffle_off_btn"
				android:layout_width="55dip"
				android:layout_height="45dip">
        	</ImageButton>
   </LinearLayout>   
    <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:orientation="horizontal"
        	android:layout_weight="0.2"
        	android:background="#aabbcc"
        	android:paddingLeft="18dip"
        	android:paddingRight="18dip"
        	android:paddingTop="2dip"
        	android:paddingBottom="2dip">
	         <SeekBar
				    android:id="@+id/progressBar"
				    android:progressDrawable="@drawable/music_seek_bar"
				    android:thumb="@drawable/seek_bar_control"
				    style="?android:attr/progressBarStyleHorizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:progress="0"/>
		</LinearLayout>
</LinearLayout>
