<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="spinfo" >
  <resultMap id="spinfoResult" class="com.tcl.onetouch.domain.Spinfo" >

    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="address" property="address" jdbcType="VARCHAR" />
    <result column="contactPerson" property="contactperson" jdbcType="VARCHAR" />
    <result column="phone" property="phone" jdbcType="VARCHAR" />
    <result column="remark" property="remark" jdbcType="VARCHAR" />
    <result column="begainTime" property="begaintime" jdbcType="TIMESTAMP" />
    <result column="endTime" property="endtime" jdbcType="TIMESTAMP" />
  </resultMap>
  
  <select id="findSpinfoCount" parameterClass="java.util.Map" resultClass="java.lang.Integer" >
    select count(*) from spinfo
  </select>
  
   <select id="findSpinfoList" parameterClass="java.util.Map" resultMap="spinfoResult">
	  select * from spinfo where 1=1
	   order by id desc limit #start#,#end#
  </select>
  
  <select id="findSpinfoAll" parameterClass="java.util.Map" resultMap="spinfoResult">
	  select * from spinfo
  </select>
  
  <select id="querySpinfo" resultMap="spinfoResult" parameterClass="java.lang.Integer" >
    select id, name, address, contactPerson, phone, remark, begainTime, endTime
    from spinfo where id = #id:INTEGER#
  </select>
  
  <delete id="deleteSpinfo" parameterClass="java.lang.Integer" >
    delete from spinfo where id = #id:INTEGER#
  </delete>

  <insert id="saveSpinfo" parameterClass="com.tcl.onetouch.domain.Spinfo" >
    insert into spinfo (id, name, address, contactPerson, phone, remark, begainTime, endTime)
    values (#id:INTEGER#, #name:VARCHAR#, #address:VARCHAR#, #contactperson:VARCHAR#,
      #phone:VARCHAR#, #remark:VARCHAR#, #begaintime:TIMESTAMP#, #endtime:TIMESTAMP#)
  </insert>
  
  <update id="updateSpinfo" parameterClass="com.tcl.onetouch.domain.Spinfo" >
    update spinfo
    <dynamic prepend="set" >
      <isNotNull prepend="," property="name" >
        name = #name:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="address" >
        address = #address:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="contactperson" >
        contactPerson = #contactperson:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="phone" >
        phone = #phone:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="remark" >
        remark = #remark:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="begaintime" >
        begainTime = #begaintime:TIMESTAMP#
      </isNotNull>
      <isNotNull prepend="," property="endtime" >
        endTime = #endtime:TIMESTAMP#
      </isNotNull>
    </dynamic>
    where id = #id:INTEGER#
  </update>
  
  
</sqlMap>