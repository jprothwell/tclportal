<?xml version="1.0" encoding="GBK"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
	default-autowire="byName">
	
	<bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
       <property name="configLocation" value="classpath:ehcache.xml" />
    </bean>
    <bean id="cache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
       <property name="cacheManager" ref="cacheManager" />
       <property name="cacheName" value="tclPaypal" />
    </bean>
    
    <!-- ¶¨Ê±Æ÷ÅäÖÃ -->
    <bean id="messageTimer" class="com.tclPaypal.message.MessageTimer"></bean>
    
    <bean id="scheduledDayDataTimerJob" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="timerTask">
		<ref bean="messageTimer"/>
		</property>
		<property name="delay">
		<value>3000</value>
		</property>
		<property name="period">
		<value>5000</value>
		</property>
	</bean> 

    <bean class="org.springframework.scheduling.timer.TimerFactoryBean">
		<property name="scheduledTimerTasks">
		<list>
			<ref bean="scheduledDayDataTimerJob"/>
		</list>
		</property>
	</bean> 
</beans>