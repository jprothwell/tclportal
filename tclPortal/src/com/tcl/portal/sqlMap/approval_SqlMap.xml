<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="approval">
  <resultMap class="com.tcl.portal.domain.Approval" id="approvalResult">
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="game" jdbcType="VARCHAR" property="game" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="proposer" jdbcType="INTEGER" property="proposer" />
    <result column="proTime" jdbcType="TIMESTAMP" property="protime" />
    <result column="checker" jdbcType="INTEGER" property="checker" />
    <result column="checkInfo" jdbcType="VARCHAR" property="checkinfo" />
    <result column="checkTime" jdbcType="TIMESTAMP" property="checktime" />
    <result column="finalChecker" jdbcType="INTEGER" property="finalchecker" />
    <result column="finalCheckInfo" jdbcType="VARCHAR" property="finalcheckinfo" />
    <result column="finalCheckTime" jdbcType="TIMESTAMP" property="finalchecktime" />
    <result column="status" jdbcType="INTEGER" property="status" />
  </resultMap>
  
  <select id="findApprovalCount" parameterClass="java.util.Map" resultClass="java.lang.Integer" >
    select count(*) from approval where 1=1
   <isNotEmpty prepend="and" property="roleId">
    	<![CDATA[status <= #roleId# ]]> 
  </isNotEmpty>
	   
  </select>
 
   <select id="findApprovalList" parameterClass="java.util.Map" resultMap="approvalResult">
	  select * from approval where 1=1
    	<isNotEmpty prepend="and" property="roleId">
    		<![CDATA[status <= #roleId# ]]> 
  		</isNotEmpty>
	   order by id desc limit #start#,#end#
  </select>
  
  <select id="queryApprovel" parameterClass="com.tcl.portal.domain.Approval" resultMap="approvalResult">
    select * from approval where id = #id:INTEGER#
  </select>

  <delete id="deleteApproval" parameterClass="com.tcl.portal.domain.Approval">
    delete from approval where id = #id:INTEGER#
  </delete>
  
  <insert id="saveApproval" parameterClass="com.tcl.portal.domain.Approval">
    insert into approval (id, game, content, proposer, proTime, checker, checkInfo, checkTime,
      finalChecker, finalCheckInfo, finalCheckTime, status)
    values (#id:INTEGER#, #game:VARCHAR#, #content:VARCHAR#, #proposer:INTEGER#,
      #protime:TIMESTAMP#, #checker:INTEGER#, #checkinfo:VARCHAR#, #checktime:TIMESTAMP#,
      #finalchecker:INTEGER#, #finalcheckinfo:VARCHAR#, #finalchecktime:TIMESTAMP#,
      #status:INTEGER#)
  </insert>
  
  <update id="updateApproval" parameterClass="com.tcl.portal.domain.Approval">
     update approval
    <dynamic prepend="set">
      <isNotNull prepend="," property="game">
        game = #game:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="content">
        content = #content:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="proposer">
        proposer = #proposer:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="protime">
        proTime = #protime:TIMESTAMP#
      </isNotNull>
      <isNotNull prepend="," property="checker">
        checker = #checker:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="checkinfo">
        checkInfo = #checkinfo:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="checktime">
        checkTime = #checktime:TIMESTAMP#
      </isNotNull>
      <isNotNull prepend="," property="finalchecker">
        finalChecker = #finalchecker:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="finalcheckinfo">
        finalCheckInfo = #finalcheckinfo:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="finalchecktime">
        finalCheckTime = #finalchecktime:TIMESTAMP#
      </isNotNull>
      <isNotNull prepend="," property="status">
        status = #status:INTEGER#
      </isNotNull>
    </dynamic>
    where id = #id:INTEGER#
  </update>
  
</sqlMap>