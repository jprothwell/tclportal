<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="comment" >
  <resultMap id="commentResult" class="com.tcl.portal.domain.Comment" >
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="mobileUserId" jdbcType="INTEGER" property="mobileuserid" />
    <result column="gameId" jdbcType="INTEGER" property="gameid" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="ctime" jdbcType="TIMESTAMP" property="ctime" />
    <result column="disable" jdbcType="INTEGER" property="disable" />
    <result column="did" jdbcType="VARCHAR" property="did" />
  </resultMap>
 <select id="findCommentCount" parameterClass="java.util.Map" resultClass="java.lang.Integer" >
    		select count(*) from comment where 1=1
    	<isNotEmpty prepend="and" property="startDate">
			<![CDATA[	ctime>=#startDate#  ]]>
	   </isNotEmpty>
	   <isNotEmpty prepend="and" property="endDate">
			<![CDATA[   ctime<=#endDate# ]]>
	   </isNotEmpty>
	    <isNotEmpty prepend="and" property="gameid">
			gameId=#gameid# 
	   </isNotEmpty>
	    <isNotEmpty prepend="and" property="gameName">
				gameId in (select id from gameinfo where gameName like  CONCAT('%', #gameName#, '%'))
	   </isNotEmpty>
  </select>
  
  <select id="findCommentList" parameterClass="java.util.Map" resultMap="commentResult">
	  select * from comment  where 1=1
    	<isNotEmpty prepend="and" property="startDate">
			<![CDATA[	ctime>=#startDate#  ]]>
	   </isNotEmpty>
	   <isNotEmpty prepend="and" property="endDate">
			<![CDATA[   ctime<=#endDate# ]]>
	   </isNotEmpty>
	    <isNotEmpty prepend="and" property="gameid">
			   gameId=#gameid# 
	   </isNotEmpty>
	     <isNotEmpty prepend="and" property="gameName">
				gameId in (select id from gameinfo where gameName like  CONCAT('%', #gameName#, '%'))
	   </isNotEmpty>
	  order by id desc limit #start#,#end#
  </select>
  
   <delete id="commonetDelete" parameterClass="java.lang.Integer" >
    delete from comment where id = #id:INTEGER#
  </delete>
 
    <update id="commonetUpdate1" parameterClass="java.lang.Integer" >
    update comment set disable = 1 where id = #id:INTEGER#
  </update>
  
   <update id="commonetUpdate0" parameterClass="java.lang.Integer" >
    update comment set disable = 0 where id = #id:INTEGER#
  </update>
</sqlMap>