<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.shopping"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".LoginActivity"
        		  android:theme="@android:style/Theme.NoTitleBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.default_searchable" android:value=".GoodsSearchActivity" />
        </activity>
     
        <activity android:theme="@android:style/Theme.NoTitleBar" 
        		  android:name="com.android.shopping.GoShoppingActivity"/>
        <activity android:name="com.android.shopping.GoodsActivity"/>
        <activity android:name="com.android.shopping.ShoppingListContentActivity">
        </activity>
        <activity android:name="com.android.shopping.ShoppingListAddActivity"/>
        <activity android:name="com.android.shopping.ShoppingListSearchActivity"/>
		<activity android:name="com.android.shopping.CalendarActivity"/>
		<activity android:name="com.android.shopping.ShoppingListActivity"/>
		
		<activity android:name="com.android.shopping.GoodsSearchActivity" android:launchMode="singleTop">
		    <intent-filter>
            	<action android:name="android.intent.action.SEARCH" />
        	</intent-filter>
		    <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
		</activity>
		
		 <provider android:name=".GoodSearchProvider"
  				   android:authorities="com.android.shopping.GoodSearchProvider"></provider>
	</application>
</manifest>