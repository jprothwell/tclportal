<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
			android:id="@+id/goods_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Name:"
			android:textSize="20sp"
			android:textColor="@color/back"
			android:layout_x="26px"
			android:layout_y="52px"
			>
	</TextView>
	<EditText
			android:id="@+id/goods_name_value"
			android:layout_width="260sp"   
	    	android:layout_height="wrap_content" 
	    	android:textColor="@color/back"
			android:text=""
			android:hint="@string/remind_insert_goods_name"
			android:textSize="18sp"
			android:layout_x="102px"
			android:layout_y="44px"
		>
		</EditText>
		
	    <Button android:id="@+id/goods_save"
		    android:layout_below="@+id/shopping_time"
		    android:textSize="20sp"
		    android:text="Save"
		    android:layout_width="120dip"
		    android:layout_height="50dip"
		    android:layout_x="25px"
			android:layout_y="200px"/>
</LinearLayout>