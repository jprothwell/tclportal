<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
		<form-bean name="businessForm" type="com.tclPaypal.form.BusinessForm"></form-bean>
	</form-beans>

	<global-forwards>
		
		<forward name="error" path="/page/error.jsp" />
	
	</global-forwards>


	<action-mappings>
		
		<action path="/business" name="businessForm" scope="request"
			parameter="action"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="buyConfirm" path="/page/business/buyConfirm.jsp" />
			<forward name="confirmSuccess" path="/page/success.jsp" />
			<forward name="recurringPayment" path="/page/business/createRecurringPaymentsProfile.jsp" />
			<forward name="createRecurringPayments" path="/page/business/createRecurringPaymentsInfo.jsp" />
			<forward name="paymentsProfileDetails" path="/page/business/getRecurringPaymentsProfileDetails.jsp" />
			<forward name="findList" path="/page/business/list.jsp" />
		</action>
		
	</action-mappings>

	<controller>
		<set-property property="processorClass"
			value="org.springframework.web.struts.DelegatingRequestProcessor" />
	</controller>

</struts-config>

