<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="comment" >
  <resultMap id="commentResult" class="com.tcl.portal.domain.Comment" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="mobileUserId" property="mobileuserid" jdbcType="INTEGER" />
    <result column="gameId" property="gameid" jdbcType="INTEGER" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="ctime" property="ctime" jdbcType="TIMESTAMP" />
    <result column="disable" property="disable" jdbcType="INTEGER" />
  </resultMap>
 <select id="findCommentCount" parameterClass="java.util.Map" resultClass="java.lang.Integer" >
    		select count(*) from comment where 1=1
    	<isNotEmpty prepend="and" property="startDate">
			<![CDATA[	ctime>=#startDate#  ]]>
	   </isNotEmpty>
	   <isNotEmpty prepend="and" property="endDate">
			<![CDATA[   ctime<=#endDate# ]]>
	   </isNotEmpty>
	    <isNotEmpty prepend="and" property="gameid">
			gameId=#gameid# 
	   </isNotEmpty>
	    <isNotEmpty prepend="and" property="gameName">
				gameId in (select id from gameinfo where gameName like  CONCAT('%', #gamename#, '%'))
	   </isNotEmpty>
  </select>
  
  <select id="findCommentList" parameterClass="java.util.Map" resultMap="commentResult">
	  select * from comment  where 1=1
    	<isNotEmpty prepend="and" property="startDate">
			<![CDATA[	ctime>=#startDate#  ]]>
	   </isNotEmpty>
	   <isNotEmpty prepend="and" property="endDate">
			<![CDATA[   ctime<=#endDate# ]]>
	   </isNotEmpty>
	    <isNotEmpty prepend="and" property="gameid">
			   gameId=#gameid# 
	   </isNotEmpty>
	     <isNotEmpty prepend="and" property="gameName">
				gameId in (select id from gameinfo where gameName like  CONCAT('%', #gamename#, '%'))
	   </isNotEmpty>
	  order by id desc limit #start#,#end#
  </select>
</sqlMap>