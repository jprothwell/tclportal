<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="downloadinfo" >
  <resultMap id="downloadinfoResult" class="com.tcl.portal.domain.Downloadinfo" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="gameId" property="gameid" jdbcType="INTEGER" />
    <result column="customerId" property="customerid" jdbcType="INTEGER" />
    <result column="ipId" property="ipid" jdbcType="INTEGER" />
    <result column="did" jdbcType="VARCHAR" property="did" />
    <result column="titleId" property="titleid" jdbcType="INTEGER" />
    <result column="location" property="location" jdbcType="INTEGER" />
    <result column="dtime" property="dtime" jdbcType="TIMESTAMP" />
     <result column="telephone" jdbcType="VARCHAR" property="telephone" />
  </resultMap>
   <select id="findDownloadinfoCount" parameterClass="java.util.Map" resultClass="java.lang.Integer" >
    		select count(*) from downloadinfo where 1=1
    	<isNotEmpty prepend="and" property="startDate">
			<![CDATA[	dtime>=#startDate#  ]]>
	   </isNotEmpty>
	   <isNotEmpty prepend="and" property="endDate">
			<![CDATA[   dtime<=#endDate# ]]>
	   </isNotEmpty>
  </select>
  
  <select id="findDownloadinfoList" parameterClass="java.util.Map" resultMap="downloadinfoResult">
	  select * from downloadinfo where 1=1
	  <isNotEmpty prepend="and" property="startDate">
			<![CDATA[	dtime>=#startDate#  ]]>
	   </isNotEmpty>
	   <isNotEmpty prepend="and" property="endDate">
			<![CDATA[   dtime<=#endDate# ]]>
	   </isNotEmpty>
	   order by id desc limit #start#,#end#
  </select>
</sqlMap>