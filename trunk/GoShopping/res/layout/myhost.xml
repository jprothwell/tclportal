<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical" android:layout_width="fill_parent"  
    android:layout_height="fill_parent" android:background="@color/white">  
   
   <LinearLayout android:id="@+id/top"
		android:orientation="horizontal" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:layout_height="40dip" android:gravity="bottom"> 
		
         <RelativeLayout  android:id="@+id/list" android:orientation="horizontal"
         	layout_weight="1"
			android:layout_height="40dip" android:layout_width="80dip">
        	<ImageView 
			android:id="@+id/list_image"
			android:background="@drawable/tab_address_normal"
			android:layout_width="40dip"
			android:layout_height="20dip"
			android:layout_marginLeft="3dip"
			android:layout_marginRight="3dip"
			android:layout_marginTop="3dip">
			</ImageView>
			<TextView
				android:id="@+id/list_text"
				android:layout_below="@id/list_image"
				android:layout_width="40dip"
				android:layout_height="15dip"
            	android:text="list"
				android:gravity="center">
			</TextView>
			
		</RelativeLayout>
		
		 <RelativeLayout android:id="@+id/calendar" android:orientation="horizontal"
		 	layout_weight="1"
			android:layout_height="40dip" android:layout_width="80dip">
			<ImageView 
			android:id="@+id/calendar_image"
			android:background="@drawable/tab_find_frd_normal"
			android:layout_width="40dip"
			android:layout_height="20dip"
			android:layout_marginLeft="3dip"
			android:layout_marginRight="3dip"
			android:layout_marginTop="3dip">
			</ImageView>
			<TextView
				android:id="@+id/calendar_text"
				android:layout_below="@id/calendar_image"
				android:layout_width="40dip"
				android:layout_height="15dip"
            	android:text="list"
				android:gravity="center">
			</TextView>
		</RelativeLayout>
		
		 <RelativeLayout android:id="@+id/favorite" android:orientation="horizontal"
		 	layout_weight="1"
			android:layout_height="40dip" android:layout_width="80dip">
			<ImageView 
			android:id="@+id/favorite_image"
			android:background="@drawable/tab_settings"
			android:layout_width="40dip"
			android:layout_height="20dip"
			android:layout_marginLeft="3dip"
			android:layout_marginRight="3dip"
			android:layout_marginTop="3dip">
			</ImageView>
			<TextView
				android:id="@+id/favorite_text"
				android:layout_below="@id/favorite_image"
				android:layout_width="40dip"
				android:layout_height="15dip"
            	android:text="list"
				android:gravity="center">
			</TextView>
		</RelativeLayout>
		
		<RelativeLayout android:id="@+id/setting" android:orientation="horizontal"
			layout_weight="1"
			android:layout_height="40dip" android:layout_width="80dip">
			<ImageView 
			android:id="@+id/setting_image"
			android:background="@drawable/tab_weixin_normal"
			android:layout_width="40dip"
			android:layout_height="20dip"
			android:layout_marginLeft="3dip"
			android:layout_marginRight="3dip"
			android:layout_marginTop="3dip">
			</ImageView>
			<TextView
				android:id="@+id/setting_text"
				android:layout_below="@id/setting_image"
				android:layout_width="40dip"
				android:layout_height="15dip"
            	android:text="list"
				android:gravity="center">
			</TextView>
		</RelativeLayout>
    </LinearLayout>  
  
    <LinearLayout android:id="@+id/content"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@id/top"
		></LinearLayout>
</RelativeLayout>  
